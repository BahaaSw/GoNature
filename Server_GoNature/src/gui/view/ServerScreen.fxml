                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox prefHeight="400.0" prefWidth="550.0" style="-fx-background-color: #ffffff;">
               <children>
                  <VBox prefHeight="220.0" prefWidth="550.0" style="-fx-alignment: center; -fx-spacing: 5;">
                     <children>
                        <Label text="Active Clients" textFill="#070707">
                           <font>
                              <Font name="Eras Demi ITC" size="23.0" />
                           </font>
                        </Label>
                        <TableView fx:id="clientsTable" prefHeight="150.0" prefWidth="291.0">
                          <columns>
                            <TableColumn fx:id="ipColumn" minWidth="144.0" prefWidth="144.0" text="Client IP" />
                              <TableColumn fx:id="hostColumn" minWidth="143.0" prefWidth="152.0" text="Client Host" />
                              <TableColumn fx:id="statusColumn" minWidth="137.0" prefWidth="213.0" text="Client Status" />
                          </columns>
                           <VBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </VBox.margin>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="550.0" style="-fx-alignment: center; -fx-spacing: 5;">
                     <children>
                        <Label text="Server Log">
                           <font>
                              <Font name="Eras Demi ITC" size="23.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="serverLog" editable="false" prefHeight="200.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets bottom="10.0" left="20.0" right="20.0" />
                           </VBox.margin>
                        </TextArea>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
